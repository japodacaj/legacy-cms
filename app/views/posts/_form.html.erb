<%= form_for [@category, @post], :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :tag_list, class: 'form-control' %>
    </div>
  </div>

  <%= f.fields_for :content do |content| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= content.cktext_area :body, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">  
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), category_url(@category), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
