<% content_for :title do %>
	<%= @post.title %> | <%= @category.name %> | <%= @site.name %>
<% end %>

<div class="post-header">
  <h2><%= @post.title %></h2>
</div>

<div>
	<%= liquidize @post.content.body, {'site' => @site, 'post' =>  @post} %>
</div>

<% if can? :manage, @post %>
	<div class="form-actions">
	  <%= link_to t('.back', :default => t("helpers.links.back")),
	              category_path(@category), :class => 'btn btn-default'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_category_post_path(@category, @post), :class => 'btn btn-default' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              category_post_path(@category, @post),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
<% end %>

