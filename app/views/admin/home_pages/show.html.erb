<% content_for :title do %>
	<%= @home_page.name %> | <%= @site.name %>
<% end %>

<div class="page-header">
  <h1><%=raw @home_page.name %></h1>
</div>

<div>
	<%= liquidize @home_page.content.body, 'home_page' => @home_page %>
</div>

<hr>

<% if can? :manage, @home_page %>
	<div class="form-actions">
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_admin_home_page_path(@home_page), :class => 'btn btn-default' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              admin_home_page_path(@home_page),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
<% end %>
