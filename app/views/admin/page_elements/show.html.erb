<% content_for :title do %>
	<%= @page_element.name %> | <%= @site.name %>
<% end %>

<div class="page-header">
  <h1><%=raw @page_element.name %></h1>
</div>

<div>
	<%= liquidize @page_element.content.body, 'site' => @site if @page_element %>
</div>

<hr>

<% if can? :manage, @page_element %>
	<div class="form-actions">
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_admin_page_element_path(@page_element), :class => 'btn btn-default' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              admin_page_element_path(@page_element),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
<% end %>
