<%= form_for [:admin, @menu], :html => { class: 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.collection_check_boxes :page_ids, @site.pages.roots.order(:name), :id, :name do |b| %>
	      <div class="checkbox"> 
	  		    <%= b.label { b.check_box + b.text} %>
				</div>
			<% end %>
      <%= f.collection_check_boxes :category_ids, @site.categories.order(:name), :id, :name do |b| %>
	      <div class="checkbox"> 
	  		    <%= b.label { b.check_box + b.text} %>
				</div>
			<% end %>
    </div>
  </div>

  <div class="form-group">  
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_menus_path, class: 'btn btn-default' %>
    </div>
  </div>
  
<% end %>
