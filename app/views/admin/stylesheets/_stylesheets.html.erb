<div class="page-header">
  <h1>Style Sheets</h1>
</div>
<table class="table table-condensed table-hover table-bordered">
  <thead>
    <tr>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @stylesheets.each do |stylesheet| %>
      <tr>
        <td><%= stylesheet.updated_at.to_formatted_s(:long) %></td>
        <td>
          <%= link_to 'Edit', edit_admin_stylesheet_path(stylesheet), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', admin_stylesheet_path(stylesheet), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, @stylesheet %>
  <div class="form-actions">
      <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_stylesheet_path,
              :class => 'btn btn-primary' %>
  </div>
<% end %>

