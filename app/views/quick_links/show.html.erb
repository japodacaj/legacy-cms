<% content_for :title do %>
	<%= @quick_link.name %> | <%= @site.name %>
<% end %>

<div class="page-header">
  <h2><%=@quick_link.name %></h2>
</div>

<div>

<ul class="links" data-update-url="<%= sort_quick_link_url(@quick_link) %>">
	<% @quick_link.links.each do |position| %>
	  <%= content_tag_for :li, position do %>
	    <span class="handle">[drag]</span>
	    <%= link_to position.item.name, position.item_url %>
	  <% end %>
	<% end %>
</ul>
</div>

<hr>

<% if can? :manage, @quick_link %>
	<div class="form-actions">
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_quick_link_path(@quick_link), :class => 'btn btn-default' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              quick_link_url(@quick_link),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
<% end %>
