<div class="page-header">
  <h2>Quick Links</h2>
</div>

<% @quick_links.each do |quick_link| %>
<h3><%= quick_link.name %></h3>
  <p>
    <% quick_link.links.each do |link| %>
      <%= link_to link.item_name, link.item_url %><br>
    <% end %>
  </p>

    <p>
      <% if can? :manage, quick_link %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      quick_link_path(quick_link), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_quick_link_path(quick_link), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      quick_link_path(quick_link),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
      <% end %>
    </p>
<% end %>
<% if can? :create, @quick_link %>
  <div class="form-actions">
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_quick_link_path,
            :class => 'btn btn-primary' %>
  </div>
<% end %>
